{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "transpile:cjs": "tsc -p tsconfig.json",
    "transpile:esm": "tsc -p tsconfig.esm.json",
    "transpile:all": "npm run transpile:cjs && npm run transpile:esm",
    "transpile": "npm run transpile:all && npm run post-compile && npm run move-build",
    "move-build": "cp src/*.d.ts lib/cjs && mv lib/cjs/*.d.ts types/",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc --write **/*.ts",
    "post-compile": "npm run prettier-format && npm run lint && npm test && npm run make-badges",
    "start": "npm run build:live",
    "build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lexogrine/typescript-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lexogrine/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/lexogrine/typescript-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "ws": "^7.4.3"
  }
}
